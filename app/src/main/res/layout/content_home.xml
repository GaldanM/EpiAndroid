<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:fillViewport="true"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context="theleatherguy.epiandroid.HomeActivity"
              tools:showIn="@layout/app_bar_home">

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		app:cardElevation="4sp">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<TextView
				android:id="@+id/titleToday"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="Today Activities"
				android:textStyle="bold"
				android:textSize="17sp"/>

			<TextView
				android:id="@+id/emptyToday"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:visibility="gone"
				android:text="Nothing to do today"/>
			<ListView
				android:layout_width="match_parent"
				android:layout_weight="1"
				android:layout_height="0dp"
				android:id="@+id/listToday"/>
		</LinearLayout>
	</android.support.v7.widget.CardView>


	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		app:cardElevation="4sp">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<TextView
				android:id="@+id/titleTomorrow"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="Tomorrow Activities"
				android:textStyle="bold"
				android:textSize="17sp"/>

			<TextView
				android:id="@+id/emptyTomorrow"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:visibility="gone"
				android:text="Nothing to do tomorrow"/>

			<ListView
				android:layout_width="match_parent"
				android:layout_weight="1"
				android:layout_height="0dp"
				android:id="@+id/listTomorrow"/>
		</LinearLayout>
	</android.support.v7.widget.CardView>

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		app:cardElevation="4sp">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<TextView
				android:id="@+id/titleDeliveries"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="This Week Deliveries"
				android:textStyle="bold"
				android:textSize="17sp"/>

			<TextView
				android:id="@+id/emptyDeliveries"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:visibility="gone"
				android:text="No deliveries this week"/>

			<ListView
				android:layout_width="match_parent"
				android:layout_weight="1"
				android:layout_height="0dp"
				android:id="@+id/listDeliveries"/>
		</LinearLayout>
	</android.support.v7.widget.CardView>

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		app:cardElevation="4sp">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<TextView
				android:id="@+id/titleMarks"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="Recent Marks"
				android:textStyle="bold"
				android:textSize="17sp"/>

			<TextView
				android:id="@+id/emptyMarks"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:visibility="gone"
				android:text="No recent marks"/>

			<ListView
				android:layout_width="match_parent"
				android:layout_weight="1"
				android:layout_height="0dp"
				android:id="@+id/listMarks"/>
		</LinearLayout>
	</android.support.v7.widget.CardView>
</LinearLayout>
